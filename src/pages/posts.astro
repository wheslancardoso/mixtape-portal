---
import BaseLayout from "../layouts/BaseLayout.astro";
import { urlFor } from "../lib/sanity";
import { sanityWriteClient } from "../lib/sanity.server";
import Newsletter from "../components/Newsletter.astro";

// Fetch All Posts
const posts =
    await sanityWriteClient.fetch(`*[_type == "post" && !(_id in path("drafts.**"))] | order(publishedAt desc){
  title, 
  slug, 
  publishedAt, 
  mainImage, 
  excerpt,
  format,
  channel
}`);

// Helper function for format styling
function getFormatStyle(format: string) {
    switch (format) {
        case "news":
            return { label: "#NEWS", color: "bg-yellow-400 text-black" };
        case "review":
            return { label: "#REVIEW", color: "bg-purple-600 text-white" };
        case "interview":
            return { label: "#ENTREVISTA", color: "bg-blue-600 text-white" };
        case "article":
        default:
            return { label: "#ORIGINAL", color: "bg-safety-orange text-white" };
    }
}
---

<BaseLayout title="ARQUIVO // FEED // MIXTAPE252">
    <div
        class="bg-ink text-paper py-2 border-b-4 border-ink overflow-hidden marquee-container"
    >
        <div
            class="marquee-content font-headline text-lg tracking-widest uppercase"
        >
            // FEED COMPLETO // TODAS AS NOTÍCIAS // MIXTAPE252 // FEED COMPLETO
            // TODAS AS NOTÍCIAS // MIXTAPE252
        </div>
    </div>

    <main class="flex-grow w-full max-w-6xl mx-auto px-4 relative z-10 mb-24">
        <div class="flex items-center gap-4 mb-12">
            <h2
                class="text-4xl md:text-6xl font-headline uppercase bg-white border-4 border-ink px-4 py-2 inline-block shadow-hard transform -rotate-1"
            >
                Feed Completo
            </h2>
            <span class="h-4 flex-grow bg-ink repeating-linear-gradient"></span>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {
                posts.map((post: any) => {
                    const style = getFormatStyle(post.format);
                    return (
                        <a
                            href={`/post/${post.slug.current}`}
                            class="group relative bg-white border-4 border-ink p-4 shadow-hard hover:shadow-hard-lg transition-all duration-300 transform hover:-translate-y-2 flex flex-col h-full"
                        >
                            <div class="overflow-hidden border-2 border-ink mb-4 relative aspect-video">
                                {post.mainImage ? (
                                    <img
                                        src={urlFor(post.mainImage)
                                            .width(600)
                                            .height(400)
                                            .url()}
                                        alt={post.title}
                                        class="w-full h-full object-cover grayscale group-hover:grayscale-0 transition-all duration-500 scale-100 group-hover:scale-110"
                                    />
                                ) : (
                                    <div class="w-full h-full flex items-center justify-center bg-gray-200 font-headline text-xl">
                                        NO SIGNAL
                                    </div>
                                )}
                                <div
                                    class={`absolute top-0 left-0 ${style.color} text-xs font-bold px-2 py-1 border-r-2 border-b-2 border-ink font-mono uppercase z-10`}
                                >
                                    {style.label}
                                </div>
                            </div>

                            <h4 class="text-2xl font-headline uppercase leading-[0.9] mb-4 group-hover:text-safety-orange transition-colors flex-grow">
                                {post.title}
                            </h4>

                            <p class="text-sm font-bold border-t-2 border-ink pt-2 mt-auto flex justify-between font-body">
                                <span>
                                    {new Date(
                                        post.publishedAt,
                                    ).toLocaleDateString("pt-BR")}
                                </span>
                                <span>LER MAIS -></span>
                            </p>
                        </a>
                    );
                })
            }
        </div>
    </main>

    <Newsletter />

    <footer
        class="bg-ink text-paper border-t-4 border-safety-orange py-12 relative z-10 mt-auto"
    >
        <div
            class="max-w-7xl mx-auto px-4 flex flex-col md:flex-row justify-between items-center gap-8"
        >
            <div class="text-center md:text-left">
                <h2
                    class="text-5xl md:text-8xl font-headline tracking-tighter leading-none mb-2"
                >
                    FEITO NO CAOS
                </h2>
                <p class="font-body text-safety-orange text-xl">// EST. 2025</p>
            </div>

            <div class="flex flex-col gap-4 text-center md:text-right">
                <a
                    href="#"
                    class="text-2xl font-headline hover:text-safety-orange hover:underline decoration-4 underline-offset-4 decoration-safety-orange transition-all"
                    >INSTAGRAM</a
                >
                <a
                    href="#"
                    class="text-2xl font-headline hover:text-safety-orange hover:underline decoration-4 underline-offset-4 decoration-safety-orange transition-all"
                    >EMAIL</a
                >
            </div>
        </div>
        <div class="text-center mt-12 text-xs opacity-50 font-body">
            NENHUM DIREITO RESERVADO. COPIE, ROUBE, REMIXE.
        </div>
    </footer>
</BaseLayout>
