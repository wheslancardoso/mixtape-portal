---
import BaseLayout from "../layouts/BaseLayout.astro";
import { urlFor } from "../lib/sanity";
import { sanityWriteClient } from "../lib/sanity.server";
import Newsletter from "../components/Newsletter.astro";
import ChannelBadge from "../components/ChannelBadge.astro";
import PostCard from "../components/PostCard.astro";

// Fetch Latest Drop (Hero)
// Fetch Latest Drop (Hero)
const latestDrop =
    await sanityWriteClient.fetch(`*[_type == "drop" && !(_id in path("drafts.**"))] | order(publishedAt desc)[0]{
  title,
  slug,
  publishedAt,
  coverImage,
  description
}`);

// Fetch Latest Posts (Feed)
const latestPosts =
    await sanityWriteClient.fetch(`*[_type == "post" && !(_id in path("drafts.**"))] | order(publishedAt desc)[0..5]{
  title, 
  slug, 
  publishedAt, 
  mainImage, 
  mainImage, 
  excerpt,
  format,
  channel
}`);

console.log("------------------------------------------------");
console.log("匠 [HOME] Posts recuperados para a capa:");
latestPosts.forEach((p: any) => console.log(`- ${p.title} (${p.publishedAt})`));
console.log("------------------------------------------------");

// Helper function for format styling removed as it is now handled in PostCard component
---

<BaseLayout title="MIXTAPE252 // O ALGORITMO Nﾃグ TEM BOM GOSTO">
    <div
        class="bg-ink text-paper py-2 border-b-4 border-ink overflow-hidden marquee-container"
    >
        <div
            class="marquee-content font-headline text-lg tracking-widest uppercase"
        >
            // BEM-VINDO AO CAOS // ARTE SEM PERMISSﾃグ // MIXTAPE252 // 2025 //
            BEM-VINDO AO CAOS // ARTE SEM PERMISSﾃグ // MIXTAPE252 // 2025 //
            BEM-VINDO AO CAOS // ARTE SEM PERMISSﾃグ // MIXTAPE252 // 2025
        </div>
    </div>

    <main class="flex-grow w-full max-w-6xl mx-auto px-4 relative z-10">
        {/* HERO SECTION: LATEST DROP */}
        <section class="mb-24">
            {
                latestDrop ? (
                    <div class="relative w-full border-4 border-ink shadow-hard bg-white group">
                        <div class="grid grid-cols-1 md:grid-cols-12">
                            {/* Imagem da Capa */}
                            <div class="md:col-span-7 border-b-4 md:border-b-0 md:border-r-4 border-ink relative overflow-hidden aspect-square md:aspect-auto md:h-[600px]">
                                {latestDrop.coverImage ? (
                                    <img
                                        src={urlFor(latestDrop.coverImage)
                                            .width(1000)
                                            .height(1000)
                                            .url()}
                                        alt={latestDrop.title}
                                        class="w-full h-full object-cover grayscale contrast-125 group-hover:grayscale-0 transition-all duration-700"
                                    />
                                ) : (
                                    <div class="w-full h-full flex items-center justify-center bg-gray-200 font-headline text-xl">
                                        NO SIGNAL
                                    </div>
                                )}
                                <div class="absolute top-0 left-0 bg-safety-orange text-white text-sm font-mono px-3 py-1 border-r-4 border-b-4 border-ink">
                                    ﾃ哭TIMA EDIﾃﾃグ
                                </div>
                            </div>

                            {/* Conteﾃｺdo do Hero */}
                            <div class="md:col-span-5 p-8 md:p-12 flex flex-col justify-center bg-paper relative overflow-hidden">
                                <div class="absolute top-0 right-0 p-4 opacity-10 pointer-events-none">
                                    <span class="font-headline text-9xl">
                                        0
                                        {latestDrop.title.match(/\d+/)?.[0] ||
                                            "1"}
                                    </span>
                                </div>

                                <span class="font-mono text-sm uppercase tracking-widest mb-4 border-b-2 border-ink inline-block w-fit pb-1">
                                    {new Date(
                                        latestDrop.publishedAt,
                                    ).toLocaleDateString("pt-BR")}
                                </span>

                                <h2 class="text-5xl md:text-7xl font-headline uppercase leading-[0.9] mb-8 group-hover:text-safety-orange transition-colors">
                                    {latestDrop.title}
                                </h2>

                                <p class="font-mono text-lg mb-10 leading-relaxed line-clamp-4">
                                    {latestDrop.description ||
                                        "Uma nova transmissﾃ｣o pirata. Arte, caos e cultura digital sem filtro."}
                                </p>

                                <a
                                    href={`/drop/${latestDrop.slug.current}`}
                                    class="inline-block w-full text-center btn-press bg-ink text-white border-4 border-ink px-6 py-4 text-2xl font-headline uppercase tracking-wider shadow-hard hover:bg-safety-orange hover:text-ink transition-all transform hover:-translate-y-1"
                                >
                                    LER EDIﾃﾃグ ->
                                </a>
                            </div>
                        </div>
                    </div>
                ) : (
                    /* Fallback se nﾃ｣o houver Drop */
                    <div class="bg-ink text-white p-12 text-center border-4 border-safety-orange shadow-hard">
                        <h2 class="text-6xl font-headline uppercase mb-4">
                            SEM SINAL
                        </h2>
                        <p class="font-mono">
                            Aguardando a primeira transmissﾃ｣o...
                        </p>
                    </div>
                )
            }
        </section>

        {/* FEED SECTION: LATEST POSTS */}
        <section id="feed" class="mb-24">
            <div class="flex items-center gap-4 mb-12">
                <h3
                    class="text-4xl md:text-6xl font-headline uppercase bg-white border-4 border-ink px-4 py-2 inline-block shadow-hard transform rotate-1"
                >
                    TRANSMISSﾃ髭S
                </h3>
                <span class="h-4 flex-grow bg-ink repeating-linear-gradient"
                ></span>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                {
                    latestPosts.map((post: any, i: number) => (
                        <PostCard post={post} index={i} />
                    ))
                }
            </div>

            <div class="mt-12 text-center">
                <a
                    href="/posts"
                    class="inline-block px-8 py-3 bg-white border-4 border-ink font-headline text-xl uppercase hover:bg-ink hover:text-white transition-colors shadow-hard"
                >
                    Ver Todos os Posts
                </a>
            </div>
        </section>
    </main>

    <Newsletter />

    <footer
        class="bg-ink text-paper border-t-4 border-safety-orange py-12 relative z-10 mt-auto"
    >
        <div
            class="max-w-7xl mx-auto px-4 flex flex-col md:flex-row justify-between items-center gap-8"
        >
            <div class="text-center md:text-left">
                <h2
                    class="text-5xl md:text-8xl font-headline tracking-tighter leading-none mb-2"
                >
                    FEITO NO CAOS
                </h2>
                <p class="font-body text-safety-orange text-xl">// EST. 2025</p>
            </div>

            <div class="flex flex-col gap-4 text-center md:text-right">
                <a
                    href="#"
                    class="text-2xl font-headline hover:text-safety-orange hover:underline decoration-4 underline-offset-4 decoration-safety-orange transition-all"
                    >INSTAGRAM</a
                >
                <a
                    href="#"
                    class="text-2xl font-headline hover:text-safety-orange hover:underline decoration-4 underline-offset-4 decoration-safety-orange transition-all"
                    >EMAIL</a
                >
            </div>
        </div>
        <div class="text-center mt-12 text-xs opacity-50 font-body">
            NENHUM DIREITO RESERVADO. COPIE, ROUBE, REMIXE.
        </div>
    </footer>

    <div
        class="hidden lg:block absolute top-1/4 right-10 bg-safety-orange text-white p-4 font-headline text-2xl rotate-12 border-4 border-ink shadow-hard z-20 pointer-events-none mix-blend-multiply"
    >
        LIVE<br />FEED
    </div>
</BaseLayout>
