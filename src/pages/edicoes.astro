---
import BaseLayout from "../layouts/BaseLayout.astro";
import { sanityClient, urlFor } from "../lib/sanity";

const drops =
    await sanityClient.fetch(`*[_type == "drop"] | order(publishedAt desc){
  title,
  slug,
  publishedAt,
  coverImage
}`);
---

<BaseLayout title="ARQUIVO // ZINES // MIXTAPE252">
    <div
        class="bg-ink text-paper py-2 border-b-4 border-ink overflow-hidden marquee-container"
    >
        <div
            class="marquee-content font-headline text-lg tracking-widest uppercase"
        >
            // ARQUIVO MORTO // ARQUIVO VIVO // ZINES // MIXTAPE252 // ARQUIVO
            MORTO // ARQUIVO VIVO // ZINES // MIXTAPE252
        </div>
    </div>

    <main class="w-full max-w-7xl mx-auto px-4 mb-24 relative z-10">
        <div class="flex items-center gap-4 mb-12">
            <h2
                class="text-5xl md:text-8xl font-headline uppercase bg-white border-4 border-ink px-4 py-2 inline-block shadow-hard transform -rotate-1"
            >
                Arquivo // Zines
            </h2>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {
                drops.map((drop: any) => (
                    <a
                        href={`/drop/${drop.slug.current}`}
                        class="group relative block bg-white border-4 border-ink shadow-hard hover:shadow-hard-lg transition-all duration-300 hover:-translate-y-2"
                    >
                        <div class="aspect-[3/4] overflow-hidden border-b-4 border-ink relative">
                            {drop.coverImage ? (
                                <img
                                    src={urlFor(drop.coverImage)
                                        .width(600)
                                        .height(800)
                                        .url()}
                                    alt={drop.title}
                                    class="w-full h-full object-cover grayscale contrast-125 group-hover:grayscale-0 transition-all duration-500"
                                />
                            ) : (
                                <div class="w-full h-full flex items-center justify-center bg-gray-200 font-headline text-xl">
                                    NO SIGNAL
                                </div>
                            )}

                            {/* Overlay on Hover */}
                            <div class="absolute inset-0 bg-ink/90 flex flex-col justify-center items-center p-6 opacity-0 group-hover:opacity-100 transition-opacity duration-300 text-center">
                                <span class="text-safety-orange font-mono text-sm uppercase mb-4 border-b-2 border-safety-orange pb-1">
                                    {new Date(
                                        drop.publishedAt,
                                    ).toLocaleDateString("pt-BR")}
                                </span>
                                <h3 class="text-white font-headline text-4xl uppercase leading-none">
                                    {drop.title}
                                </h3>
                                <span class="mt-6 px-4 py-2 bg-safety-orange text-ink font-headline uppercase text-lg border-2 border-white transform rotate-2">
                                    Ler Edição
                                </span>
                            </div>
                        </div>

                        <div class="p-4 bg-paper flex justify-between items-center">
                            <span class="font-headline text-xl uppercase truncate pr-4">
                                {drop.title}
                            </span>
                            <span class="font-mono text-xs bg-ink text-white px-2 py-1">
                                VOL. {drop.title.match(/\d+/)?.[0] || "X"}
                            </span>
                        </div>
                    </a>
                ))
            }
        </div>
    </main>

    <footer
        class="bg-ink text-paper border-t-4 border-safety-orange py-12 relative z-10 mt-auto"
    >
        <div
            class="max-w-7xl mx-auto px-4 flex flex-col md:flex-row justify-between items-center gap-8"
        >
            <div class="text-center md:text-left">
                <h2
                    class="text-5xl md:text-8xl font-headline tracking-tighter leading-none mb-2"
                >
                    FEITO NO CAOS
                </h2>
                <p class="font-body text-safety-orange text-xl">// EST. 2025</p>
            </div>

            <div class="flex flex-col gap-4 text-center md:text-right">
                <a
                    href="#"
                    class="text-2xl font-headline hover:text-safety-orange hover:underline decoration-4 underline-offset-4 decoration-safety-orange transition-all"
                    >INSTAGRAM</a
                >
                <a
                    href="#"
                    class="text-2xl font-headline hover:text-safety-orange hover:underline decoration-4 underline-offset-4 decoration-safety-orange transition-all"
                    >EMAIL</a
                >
            </div>
        </div>
        <div class="text-center mt-12 text-xs opacity-50 font-body">
            NENHUM DIREITO RESERVADO. COPIE, ROUBE, REMIXE.
        </div>
    </footer>
</BaseLayout>
